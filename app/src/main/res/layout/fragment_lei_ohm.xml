<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8FBFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lei de Ohm's"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#2D3748" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleção Manual da entrada (opicional):"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#718096" />

        <!-- Grid de seleção -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:elevation="5dp"
            android:padding="4dp">

            <TableRow
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_ri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="R+I"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#1976D2"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/btn_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="R+V"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#1976D2"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/btn_rp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="R+P"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#1976D2"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/btn_iv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="I+V"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#1976D2"
                    android:layout_margin="1.5dp" />

                <Button
                    android:id="@+id/btn_ip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="I+P"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#1976D2"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/btn_vp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.199"
                    android:text="V+P"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#1976D2"
                    android:layout_margin="2dp" />
            </TableRow>
        </TableLayout>

        <!-- Campos de entrada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Resistência -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resistência (R)"
                    android:textSize="16sp"
                    android:textColor="#2D3748" />

                <EditText
                    android:id="@+id/et_resistance"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="5.0"
                    android:background="#F7FAFC"
                    android:textColor="#2D3748"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ω"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Corrente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Corrente (I)"
                    android:textSize="16sp"
                    android:textColor="#2D3748" />

                <EditText
                    android:id="@+id/et_current"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="2"
                    android:background="#F7FAFC"
                    android:textColor="#2D3748"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Tensão -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tensão (U)"
                    android:textColor="#2D3748"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_voltage"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#F7FAFC"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:text="10"
                    android:textColor="#2D3748" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="V"
                    android:textColor="#718096"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Potência -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Potência (P)"
                    android:textSize="16sp"
                    android:textColor="#2D3748" />

                <EditText
                    android:id="@+id/et_power"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="20.0"
                    android:background="#F7FAFC"
                    android:textColor="#2D3748"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#4299E1"
                android:text="Calcular"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Divisor de Tensão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Divisor de Tensão"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Resistor 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resistor 1 (R1)"
                    android:textSize="14sp"
                    android:textColor="#2D3748" />

                <EditText
                    android:id="@+id/et_resistor1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1000"
                    android:background="#F7FAFC"
                    android:textColor="#2D3748"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ω"
                    android:textSize="12sp"
                    android:textColor="#718096"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Resistor 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resistor 2 (R2)"
                    android:textSize="14sp"
                    android:textColor="#2D3748" />

                <EditText
                    android:id="@+id/et_resistor2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1000"
                    android:background="#F7FAFC"
                    android:textColor="#2D3748"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ω"
                    android:textSize="12sp"
                    android:textColor="#718096"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Tensão de Entrada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tensão de Entrada (Vin)"
                    android:textSize="14sp"
                    android:textColor="#2D3748" />

                <EditText
                    android:id="@+id/et_voltage_in"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="12"
                    android:background="#F7FAFC"
                    android:textColor="#2D3748"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:textSize="12sp"
                    android:textColor="#718096"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Botão Calcular Divisor -->
            <Button
                android:id="@+id/btn_calculate_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Divisor de Tensão"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Resultado do Divisor -->
            <LinearLayout
                android:id="@+id/divider_result_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#E8F5E8"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tensão de Saída (Vout):"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_voltage_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.00 V"
                    android:textSize="16sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agora I e V são os valores de entrada. R e P estão sendo calculados."
            android:textSize="14sp"
            android:textColor="#718096"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Resultados -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:src="@drawable/lei_de_ohm_e_potc3aancia__1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <!-- Rodapé -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>